<% include header.ejs %>

    <div class="container">
            <h1><center>리스트</h1></center>    <center><a href="form" >추가하기</a></center>
            <br>
            <br>
           
            <table class="alllist" border="1" style="margin-left: auto; margin-right: auto;">
            <thead>
            <tr>
                <center>
                <select name="box">
                <option value="1">제목</option>
                <option value="1">시즌</option>
                <option value="1">년도</option>
                <option value="1">장르</option>                            
                </select>                
                <input type="text" id="search" placeholder="검색어">
                <input type="button" onclick="searchf()" value="검색"></div></center>
                <center>
                <br>
                    <font color=#ff2222><th>사진</th></font>
            <th>제목</th>
            <th>시즌</th>
            <th>년도</th>
            <th>장르</th>
            <th>배우</th>
            <th>줄거리</th>
            <th>등급</th>
            <th>수정</th>
            <th>삭제</th>
            </tr>
            </thead>
            <tbody>
            
            <% data.forEach(function (item){ %>
            <tr>
            <td>
                <a href='<%= item.website %>'><center>
                <img src="images/md/<%= item.picture %>" height="70px">
                </center></a>
            </td>
            <td>
                <a href='/review?title=<%= item.title %>'><%= item.title %></a>
            </td>
            <td>
                <center><%= item.season %></center>
            </td>
            <td>
                <center><%= item.year %></center>
            </td>
            <td>
                <%= item.genre %>
            </td>
            <td>
                <%= item.actor %>
            </td>
            <td>
                <%item.summary.length%>
                <%  if(item.summary.length>35){
                        var dd=item.summary.substring(0, 35);%>
                        <%=dd%>...
                <%} else{%>
                    <%= item.summary%>
                <%}%>
            </td>
            <td>
                <%= item.age %>
            </td>
            <td>           
                <a href="javascript:mdEdit('<%=item.title%>')">수정</a>
            </td>
            <td>
                <a href="javascript:mdDelete('<%=item.title%>')">삭제</a>
            </td>
            </tr>
            <% })%>
            </tbody>
            </table></center>
            </div>

